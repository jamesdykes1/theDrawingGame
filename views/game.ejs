<!DOCTYPE html>
<html>
  <head>
    <title>The Drawing Game</title>
    <meta name="viewport" width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0>
    <style> body {padding: 0; margin: 0;} </style>
    <!--Drawing libraries from p5js -->
    <script src="libraries/p5.js"></script>
    <script src="libraries/p5.dom.js"></script>
    <script src="libraries/p5.sound.js"></script>
    <!-- socket io client served from CDN -->
    <script src="https://cdn.socket.io/socket.io-1.4.5.js"></script>
  </head>
  <body>

<div id="mainBody">
	<h1>The Drawing Game</h1>
		<div id="Player1"><h2>Hello <%= data.userid %></h2></div></br>
		<div id="Point">Your Score is: <%= data.userid %></div></br>
    <div id="submitTheWord">
      What to draw:
        <input id="theWord" type="text">
        <button id="send" type="button" name="button">Create</button>
        <div id="output"></div>
    </div>
    <div id="myGuess">
      Make a guess:
      <input id="wordGuess" type="text">
      <button id="submitGuess" type="button" name="button">Submit</button>
    </div>
</div>
<script src="sketch.js"></script>
  </body>
</html>
